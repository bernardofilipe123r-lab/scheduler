# Local Development Environment Template
# Copy this file to .env and fill in your values

# OpenAI API Key (required for AI features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=
DEAPI_API_KEY=your_deapi_key_here

# Application Settings
APP_ENV=development
API_HOST=127.0.0.1
API_PORT=8000

# Meta/Facebook App Configuration (shared across all accounts)
# Get these from: https://developers.facebook.com/apps/YOUR_APP_ID/settings/basic/
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_app_secret_here

# =============================================================================
# GYM COLLEGE - Instagram & Facebook
# =============================================================================
# Generate tokens from: Meta App Dashboard -> Tools -> Access Token Tool
GYMCOLLEGE_INSTAGRAM_ACCESS_TOKEN=your_gymcollege_instagram_token_here
GYMCOLLEGE_INSTAGRAM_BUSINESS_ACCOUNT_ID=your_gymcollege_instagram_account_id_here
GYMCOLLEGE_FACEBOOK_PAGE_ID=your_gymcollege_facebook_page_id_here
GYMCOLLEGE_FACEBOOK_ACCESS_TOKEN=your_gymcollege_facebook_token_here
GYMCOLLEGE_META_ACCESS_TOKEN=your_gymcollege_meta_token_here

# =============================================================================
# HEALTHY COLLEGE - Instagram & Facebook
# =============================================================================
# Generate tokens from: Meta App Dashboard -> Tools -> Access Token Tool
HEALTHYCOLLEGE_INSTAGRAM_ACCESS_TOKEN=your_healthycollege_instagram_token_here
HEALTHYCOLLEGE_INSTAGRAM_BUSINESS_ACCOUNT_ID=your_healthycollege_instagram_account_id_here
HEALTHYCOLLEGE_FACEBOOK_PAGE_ID=your_healthycollege_facebook_page_id_here
HEALTHYCOLLEGE_FACEBOOK_ACCESS_TOKEN=your_healthycollege_facebook_token_here
HEALTHYCOLLEGE_META_ACCESS_TOKEN=your_healthycollege_meta_token_here

# =============================================================================
# Legacy/Fallback Configuration (for backward compatibility)
# Set which account to use by default
# =============================================================================
INSTAGRAM_ACCESS_TOKEN=your_default_instagram_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_default_instagram_account_id_here
META_ACCESS_TOKEN=your_default_meta_token_here
FACEBOOK_PAGE_ID=your_default_facebook_page_id_here
FACEBOOK_ACCESS_TOKEN=your_default_facebook_token_here

# Public URL base (required for publishing - videos must be publicly accessible)
# For local dev: Use ngrok (https://abc123.ngrok.io) or localtunnel (https://cool-paths-nail.loca.lt)
# For production: Use your Railway/Vercel domain
PUBLIC_URL_BASE=https://your-app-url.com

# Database Configuration
# PostgreSQL connection string — point at your Supabase project
DATABASE_URL=

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Authentication Configuration
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=your_secure_password_here
LOGS_PASSWORD=your_logs_password_here

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173

# =============================================================================
# Frontend (Vite) — Supabase Auth
# =============================================================================
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
